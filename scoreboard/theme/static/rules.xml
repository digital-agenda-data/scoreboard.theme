<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    >

    <!-- The default theme, used for standard Plone web pages -->
    <theme href="offlineDemo.htm" css:if-content="#visual-portal-wrapper" />

    <drop theme="/html/head/meta" />
    <drop theme="/html/head/title" />
    <drop theme="/html/head/script" />
    <drop css:theme="link[href*='widget100.css']" />
    <drop css:theme="link[href*='redesign']" />
    <drop css:theme="link[href*='layout.css']" />
    <drop css:theme="link[href*='content.css']" />
    <drop css:theme="link[href*='scoreboard.css']" />


    <before theme-children="/html/head" content="/html/head/title" />
    <before theme-children="/html/head" content="/html/head/meta" />
    <before theme-children="/html/head" content="/html/head/base | /html/head/style | /html/head/script | /html/head/link | /html/head/comment()" />

   <copy attributes="class id dir" content="/html/body" theme="/html/body" />

    <replace css:content="#personaltools-login" css:theme=".container-fluid a" />
    <replace css:if-content="#personaltools-logout"
             css:content="#personaltools-logout a" css:theme=".container-fluid a" />

    <drop css:content="#personaltools-dashboard" />
    <drop css:content="#personaltools-preferences" />

    <drop css:content=".documentByLine" />
    <replace css:content="ul.breadcrumbs" css:theme="ul.breadcrumbs" />

    <replace css:content=".documentFirstHeading" css:theme=".documentFirstHeading" />

    <replace css:content-children="#content-core" css:theme-children="#main" />

    <drop css:content=".download-visualization" />

    <before css:content="#personaltools-plone_setup" css:theme="#sidebar-list li:first-child" />

    <replace css:theme="#documentation-link">
        <a href="{$portal_url}/documentation">Documentation</a>
    </replace>
    <replace css:theme="#privacy-link">
        <a href="{$portal_url}/privacy">Privacy</a>
    </replace>

    <replace css:theme="#logo-header-link">
      <a href="{$portal_url}" id="logo-header-link">
        <img class="logo" src="{$portal_url}/++theme++scoreboard.theme/images/logo.svg" alt="European Commision logo" />
      </a>
    </replace>

    <rules css:if-content="body.template-homepage-listing">
      <drop css:theme="#navsearch-wrapper" />
    </rules>

    <rules css:if-content="body.template-documentation">
      <replace css:content-children="#documentation-content .main-content" css:theme-children="#main" />
      <replace css:theme=".documentFirstHeading" css:content="#documentation-content h1" />
    </rules>

</rules>